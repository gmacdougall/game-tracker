source 'https://rubygems.org'

gem 'rails', '3.2.6'
gem 'sqlite3'

gem 'simple_form'
gem 'show_for'
gem 'thin'
gem 'irbtools'
gem 'mysql2'
gem 'jquery-datatables-rails'
gem 'rails-footnotes'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'bootstrap-sass'
  gem 'bootstrap-datepicker-rails'
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# Authorizations
gem 'cancan'
gem 'devise'
gem 'rolify'

group :test, :development do
  gem 'quiet_assets'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'simplecov', require: false
end

group :development do
  gem 'guard'
  gem 'guard-livereload'
  gem 'guard-rails'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'rack-livereload'
  gem 'spork'
end
