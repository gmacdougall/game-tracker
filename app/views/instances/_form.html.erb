<%= simple_form_for(@instance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :play_date, as: :date_picker %>
    <%= f.association :game, collection: @games %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
