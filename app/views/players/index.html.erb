<h1>Listing players</h1>

<table class='table'>
  <thead>
    <tr>
        <th><%= Player.human_attribute_name :first_name%></th>
        <th><%= Player.human_attribute_name :last_name%></th>
        <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @players) do |player| %>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td>
        <div class='btn-group'>
          <%= link_to 'Show', player, class: 'btn' if can? :show, player %>
          <%= link_to 'Edit', edit_player_path(player), class: 'btn btn-warning' if can? :edit, player %>
          <%= link_to 'Destroy', player, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger' if can? :destroy, player %>
        </div>
      </td>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Player', new_player_path, class: 'btn' if can? :new, :player %>
