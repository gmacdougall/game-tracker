<h1>Listing scores</h1>

<table class='table'>
  <thead>
    <tr>
        <th><%= Score.human_attribute_name :instance_id%></th>
        <th><%= Score.human_attribute_name :player_id%></th>
        <th><%= Score.human_attribute_name :score%></th>
        <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @scores) do |score| %>
        <td><%= score.instance.name %></td>
        <td><%= score.player.name %></td>
        <td><%= score.score %></td>
        <td>
        <div class='btn-group'>
          <%= link_to 'Show', score, class: 'btn' if can? :show, score %>
          <%= link_to 'Edit', edit_score_path(score), class: 'btn btn-warning' if can? :edit, score %>
          <%= link_to 'Destroy', score, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger' if can? :destroy, score %>
        </div>
      </td>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Score', new_score_path, class: 'btn' if can? :new, :score %>
