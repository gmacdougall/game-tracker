<h1>Listing <%= plural_table_name %></h1>

<table class='table'>
  <thead>
    <tr>
  <% attributes.each do |attribute| -%>
      <th><%%= <%= class_name %>.human_attribute_name :<%= attribute.name %>%></th>
  <% end -%>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
  <% attributes.each do |attribute| -%>
      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
  <% end -%>
      <td>
        <div class='btn-group'>
          <%%= link_to 'Show', <%= singular_table_name %>, class: 'btn' if can? :show, <%= singular_table_name %> %>
          <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-warning' if can? :edit, <%= singular_table_name %> %>
          <%%= link_to 'Destroy', <%= singular_table_name %>, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger' if can? :destroy, <%= singular_table_name %> %>
        </div>
      </td>
    <%% end %>
  </tbody>
</table>

<br />

